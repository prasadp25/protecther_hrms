# ==============================================
# HRMS BACKEND ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=hrms_db

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=5000
NODE_ENV=development
API_PREFIX=/api/v1

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate a secure random string using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING
JWT_EXPIRES_IN=24h

# ==============================================
# BCRYPT PASSWORD HASHING
# ==============================================
# Higher rounds = more secure but slower (10-12 recommended)
BCRYPT_ROUNDS=10

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ==============================================
# RATE LIMITING
# ==============================================
# General API rate limiting (milliseconds)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Login specific rate limiting
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=5

# ==============================================
# ACCOUNT SECURITY
# ==============================================
# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# ==============================================
# SESSION & COOKIES
# ==============================================
# Generate using same method as JWT_SECRET
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING
COOKIE_MAX_AGE=86400000

# ==============================================
# EMAIL CONFIGURATION (Optional - Future Use)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@hrms.com
# EMAIL_FROM_NAME=HRMS System

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# When NODE_ENV=production:
# - Cookies will use secure flag (HTTPS only)
# - Detailed error messages hidden
# - Enhanced security features enabled
